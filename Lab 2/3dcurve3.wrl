	exposedField SFString center
	exposedField SFString rotation
	exposedField SFString scale
	exposedField SFString scaleOrientation
	exposedField SFString translation
	exposedField MFNode children
	exposedField MFNode	parents
	eventIn	SFBool refresh
    exposedField SFVec2f timeSpan
	exposedField SFTime	startTime
	exposedField SFTime stopTime
    exposedField SFTime cycleInterval
    exposedField SFBool	loop
	exposedField SFBool	enabled
	eventOut SFTime	cycleTime
	eventIn SFFloat set_fraction
	field SFInt32 frames
] "http://www3.ntu.edu.sg/home/assourin/FVRML/FVRML.wrl#FTransform"

Background {skyColor 0.8 0.8 0.8}

FShape {
polygonizer "analytical_curve"
	loop TRUE
	cycleInterval 1
	appearance FAppearance {
		material FMaterial {
			diffuseColor "r=0;g=0;b=0;"
			timeSpan 0 1
		}
		texture3D FTexture3D {
			definition "0"
			timeSpan 0 1
         type "displacement"
		}
	}
	geometry FGeometry {
		definition "function parametric_x(u,v,w,t){
						return u*cos(u*Pi)/8;
					}
					function parametric_y(u,v,w,t){
						return u*sin(u*Pi)/8;
					}
					function parametric_z(u,v,w,t){
						return u/8;
					}"
		parameters [0, 8]
		bboxSize 2.5 2.5 2.5
		bboxCenter 0 0 0
		resolution [800, 800, 800]
		timeSpan 0 1
	}
}
Inline {url "http://www3.ntu.edu.sg/home/assourin/FVRML/CoordinateAxes.wrl"}

# 3d curve obtained from parametric equations of x=u*cos(u)/8, y=u*sin(u)/8, z=u/8. Parameter domain is [0,8], Sampling resolution is 800
# resulted curve is a circle of radius increasing from 0 to 1, and z from 0 to 1